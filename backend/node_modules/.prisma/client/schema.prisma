generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("viewer") // hoáº·c "admin"
  files    File[]
}

model File {
  id         Int      @id @default(autoincrement())
  filename   String
  path       String
  mimetype   String
  size       Int
  uploadedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
}
